import os
import shutil
from datetime import datetime

# 📂 Folder to organize (change this path to your Downloads folder)
source_folder = r"C:\Users\YourName\Downloads"

# 📁 Destination folders
folders = {
    "Images": [".jpg", ".jpeg", ".png", ".gif", ".bmp"],
    "Documents": [".pdf", ".docx", ".txt", ".xlsx", ".pptx"],
    "Videos": [".mp4", ".mov", ".avi", ".mkv"],
    "Music": [".mp3", ".wav", ".aac"],
    "Archives": [".zip", ".rar", ".7z", ".tar"],
    "Programs": [".exe", ".msi"],
    "Others": []
}

def create_folder(path):
    """Create a folder if it doesn’t exist."""
    if not os.path.exists(path):
        os.makedirs(path)

def organize_files():
    """Move files into categorized folders."""
    for file in os.listdir(source_folder):
        file_path = os.path.join(source_folder, file)

        if os.path.isfile(file_path):
            file_ext = os.path.splitext(file)[1].lower()

            moved = False
            for folder, extensions in folders.items():
                if file_ext in extensions:
                    dest_folder = os.path.join(source_folder, folder)
                    create_folder(dest_folder)
                    shutil.move(file_path, os.path.join(dest_folder, file))
                    print(f"✅ Moved: {file} → {folder}")
                    moved = True
                    break

            if not moved:
                dest_folder = os.path.join(source_folder, "Others")
                create_folder(dest_folder)
                shutil.move(file_path, os.path.join(dest_folder, file))
                print(f"📦 Moved: {file} → Others")

    print("\n🎉 File organization complete at", datetime.now())

# Run the automation
if __name__ == "__main__":
    organize_files()
